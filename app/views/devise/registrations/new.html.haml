.center
  .container
    .row
      .col-xs-12.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
        .log-in.panel.panel-primary
          .panel-heading
            .panel-title.text-center
              Cadastro - Novo Usuário
          .panel-body
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!
              .form-group
                = f.label :name
                %br/
                = f.text_field :name, autofocus: true, class: 'form-control'
              .form-group
                = f.label :email
                %br/
                = f.email_field :email, class: 'form-control'
              .form-group
                = f.label :password
                - if @minimum_password_length
                  %em
                    (Largura mínima de #{@minimum_password_length} caracteres)
                %br/
                = f.password_field :password, autocomplete: "off", class: 'form-control'
              .form-group
                = f.label :password_confirmation
                %br/
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
              .actions{style: 'margin-top: 10px'}
                = f.submit "Cadastrar-me", class: 'btn btn-primary btn-lg btn-block'
            %br
            = render "devise/shared/links"
